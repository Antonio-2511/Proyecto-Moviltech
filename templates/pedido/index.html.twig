{% extends 'base.html.twig' %}

{% block title %}Mis pedidos{% endblock %}

{% block body %}
    <h1>Mis pedidos</h1>

    {% if pedidos is empty %}
        <p>No has realizado ningún pedido.</p>
    {% else %}
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Fecha</th>
                <th>Estado</th>
                <th>Total</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for pedido in pedidos %}
                <tr>
                    <td>#{{ pedido.id }}</td>
                    <td>{{ pedido.fecha|date('d/m/Y H:i') }}</td>
                    <td>{{ pedido.estado }}</td>
                    <td>{{ pedido.total }} €</td>
                    <td>
                        <a href="{{ path('pedido_show', {'id': pedido.id}) }}"
                           class="btn btn-primary btn-sm">
                            Ver detalle
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
