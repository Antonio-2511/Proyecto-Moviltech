{% extends 'base.html.twig' %}

{% block title %}{{ producto.nombre }}{% endblock %}

{% block body %}

    <div class="container mt-4">

        <div class="row">

            <div class="col-md-6">

                <h1>{{ producto.nombre }}</h1>

                {% if producto.imagen %}
                    <img src="{{ producto.imagen }}"
                         class="img-fluid mb-3 rounded shadow-sm">
                {% endif %}

                <p>{{ producto.descripcion }}</p>

                <p class="fw-bold fs-4">
                    {{ producto.precio }} €
                </p>

                <p>
                    <strong>Stock disponible:</strong> {{ producto.stock }}
                </p>

                <div class="d-flex gap-2 mb-4">

                    {% if producto.stock > 0 %}
                        <a href="{{ path('carrito_add', {'id': producto.id}) }}"
                           class="btn btn-success">
                            Añadir al carrito
                        </a>
                    {% else %}
                        <button class="btn btn-secondary" disabled>
                            Sin stock
                        </button>
                    {% endif %}

                    <a href="{{ path('app_home') }}"
                       class="btn btn-outline-secondary">
                        Volver al catálogo
                    </a>

                </div>

            </div>

        </div>

        <hr>

        <h3 class="mb-3">Reseñas</h3>

        {% if producto.resenas is empty %}
            <p class="text-muted">Este producto aún no tiene reseñas.</p>
        {% else %}
            {% for resena in producto.resenas %}
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">

                        <strong>{{ resena.usuario.nombre }}</strong>
                        <span class="text-muted small">
                            - {{ resena.fecha|date('d/m/Y') }}
                        </span>

                        <div class="mt-2">
                            Puntuación: {{ resena.puntuacion }}/5
                        </div>

                        {% if resena.comentario %}
                            <p class="mt-2 mb-0">
                                {{ resena.comentario }}
                            </p>
                        {% endif %}

                    </div>
                </div>
            {% endfor %}
        {% endif %}

        {% if app.user %}

            <hr>

            <h4 class="mb-3">Añadir reseña</h4>

            {{ form_start(form, {
                action: path('resena_new', {'id': producto.id}),
                attr: { class: 'mb-4' }
            }) }}

            <div class="mb-3">
                {{ form_label(form.puntuacion) }}
                {{ form_widget(form.puntuacion, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.puntuacion) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.comentario) }}
                {{ form_widget(form.comentario, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                {{ form_errors(form.comentario) }}
            </div>

            <button class="btn btn-primary">
                Enviar reseña
            </button>

            {{ form_end(form) }}

        {% else %}

            <p class="mt-3">
                <a href="{{ path('app_login') }}">Inicia sesión</a> para dejar una reseña.
            </p>

        {% endif %}

    </div>

{% endblock %}
