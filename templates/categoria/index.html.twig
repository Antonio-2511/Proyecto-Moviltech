{% extends 'base.html.twig' %}

{% block title %}Gestión de Categorías{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Gestión de Categorías</h1>

        <a href="{{ path('app_categoria_new') }}" class="btn btn-success mb-3">
            Nueva Categoría
        </a>

        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            {% for categoria in categorias %}
                <tr>
                    <td>{{ categoria.nombre }}</td>
                    <td>{{ categoria.descripcion }}</td>
                    <td>
                        <a href="{{ path('app_categoria_edit', {'id': categoria.id}) }}" class="btn btn-warning btn-sm">Editar</a>
                        {{ include('categoria/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No hay categorías registradas.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
