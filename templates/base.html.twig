<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}MovilTech{% endblock %}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    {# Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    {% block stylesheets %}{% endblock %}
</head>

<body>

{# NAVBAR #}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_home') }}">MovilTech</a>

        <button class="navbar-toggler" type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">

            {# IZQUIERDA #}
            <ul class="navbar-nav me-auto">

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_home') }}">Inicio</a>
                </li>

                {% if app.user and not is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('pedido_index') }}">
                            Mis pedidos
                        </a>
                    </li>
                {% endif %}

                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_producto_index') }}">
                            Productos
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_categoria_index') }}">
                            Categorías
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_pedido_index') }}">
                            Gestión pedidos
                        </a>
                    </li>
                {% endif %}

            </ul>

            {# DERECHA #}
            <ul class="navbar-nav">

                {% if app.user %}

                    {# CARRITO SOLO PARA USUARIO NORMAL #}
                    {% if not is_granted('ROLE_ADMIN') %}

                        {% set carrito = app.request.session.get('carrito', {}) %}
                        {% set cantidad = 0 %}

                        {% for c in carrito %}
                            {% set cantidad = cantidad + c %}
                        {% endfor %}

                        <li class="nav-item">
                            <a class="nav-link position-relative" href="{{ path('carrito_index') }}">
                                Carrito

                                {% if cantidad > 0 %}
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        {{ cantidad }}
                                    </span>
                                {% endif %}
                            </a>
                        </li>

                    {% endif %}

                    <li class="nav-item">
                        <span class="nav-link">
                            {{ app.user.nombre }}
                        </span>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">
                            Cerrar sesión
                        </a>
                    </li>

                {% else %}

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">
                            Login
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}">
                            Registro
                        </a>
                    </li>

                {% endif %}

            </ul>

        </div>
    </div>
</nav>


{# FLASH MESSAGES #}
<div class="container mt-3">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}
</div>

{# CONTENIDO PRINCIPAL #}
<main class="container mt-4">
    {% block body %}{% endblock %}
</main>

{# Bootstrap JS #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

{% block javascripts %}{% endblock %}
</body>
</html>
