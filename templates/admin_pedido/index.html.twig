{% extends 'base.html.twig' %}

{% block title %}Gestión de pedidos{% endblock %}

{% block body %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Gestión de pedidos</h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">

            {% if pedidos is empty %}
                <div class="alert alert-info mb-0">
                    No hay pedidos registrados.
                </div>
            {% else %}

                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Usuario</th>
                            <th>Fecha</th>
                            <th>Estado</th>
                            <th>Total</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for pedido in pedidos %}
                            <tr>
                                <td>#{{ pedido.id }}</td>

                                <td>{{ pedido.usuario.email }}</td>

                                <td>{{ pedido.fecha|date('d/m/Y H:i') }}</td>

                                <td style="min-width: 170px;">
                                    <form method="post"
                                          action="{{ path('admin_pedido_estado', {id: pedido.id}) }}">

                                        <select name="estado"
                                                class="form-select form-select-sm"
                                                onchange="this.form.submit()">

                                            {% for estado in ['pendiente','pagado','enviado','entregado','cancelado'] %}
                                                <option value="{{ estado }}"
                                                        {% if pedido.estado == estado %}selected{% endif %}>
                                                    {{ estado|capitalize }}
                                                </option>
                                            {% endfor %}
                                        </select>
                                    </form>
                                </td>

                                <td class="fw-bold">
                                    {{ pedido.total }} €
                                </td>

                                <td class="text-end">
                                    <a href="{{ path('pedido_show', {id: pedido.id}) }}"
                                       class="btn btn-sm btn-outline-primary">
                                        Ver detalle
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            {% endif %}

        </div>
    </div>

{% endblock %}
